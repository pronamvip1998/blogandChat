<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            POSTS     
              <a href="/admin/post/new" style="margin-left: 10px;" class="btn btn-success"> Add New Post</a> 
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Content222222</th>
                            <th>Author</th>
                            <th>Create Time</th>
                            <th>Update Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data && data.posts) { %>
                            <% for(var i=0 ; i < data.posts.length ; i++){ %>
                        <tr>
                            <td><%= data.posts[i].id %></td>
                            <td><%= data.posts[i].title %></td>
                            <td><%= data.posts[i].content %></td>
                            <td><%= data.posts[i].author %></td>
                            <td><%= data.posts[i].create_at %></td>
                            <td><%= data.posts[i].update_at %></td>
                            <td>
                                <a href="/admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary">Edit</a>
                                <button  class="btn btn-danger post_delete" post_id="<%= data.posts[i].id %>" >Deleted</button>
                            </td>
                        </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>